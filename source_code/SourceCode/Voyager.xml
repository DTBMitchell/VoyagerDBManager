<?xml version="1.0" encoding="UTF-8"?>
<project name="sourcecode" default="all">
  
  
  <property file="Voyager.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.egg"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
    <include name="*.klib"/>
    <include name="*.swc"/>
    <include name="*.war"/>
    <include name="*.zip"/>
    <include name="*.ane"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
  <path id="jdk.classpath.1.8">
    <fileset dir="${jdk.home.1.8}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/ext/access-bridge-64.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunmscapi.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.mysql-connector-java-8.0.15.classpath">
    <pathelement location="${basedir}/lib/mysql/mysql-connector-java/8.0.15/mysql-connector-java-8.0.15.jar"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <fileset dir="${javac2.home}">
      <include name="javac2.jar"/>
      <include name="jdom.jar"/>
      <include name="asm-all*.jar"/>
      <include name="forms-*.jar"/>
    </fileset>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  <import file="${basedir}/module_sourcecode.xml"/>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.sourcecode, clean.artifact.sourcecode" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.sourcecode" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.sourcecode" value="${basedir}/out/artifacts/SourceCode"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="artifact.temp.output.SourceCode" value="${artifacts.temp.dir}/SourceCode.jar"/>
    <taskdef resource="com/sun/javafx/tools/ant/antlib.xml" uri="javafx:com.sun.javafx.tools.ant" classpath="${jdk.home.1.8}/lib/ant-javafx.jar"/>
  </target>
  
  <target name="clean.artifact.sourcecode" description="clean SourceCode artifact output">
    <delete dir="${artifact.output.sourcecode}"/>
  </target>
  
  <target name="artifact.sourcecode" depends="init.artifacts, compile.module.sourcecode" description="Build &#39;SourceCode&#39; artifact" xmlns:fx="javafx:com.sun.javafx.tools.ant">
    <mkdir dir="${artifact.output.sourcecode}"/>
    <copy todir="${artifact.temp.output.SourceCode}">
      <fileset dir="${sourcecode.output.dir}"/>
    </copy>
    <copy file="${basedir}/lib/javafx/javafx-sdk-12/lib/src.zip" tofile="${artifact.temp.output.SourceCode}/src.zip"/>
    <copy file="${basedir}/lib/javafx/javafx-sdk-12/lib/javafx-swt.jar" tofile="${artifact.temp.output.SourceCode}/javafx-swt.jar"/>
    <copy file="${basedir}/lib/javafx/javafx-sdk-12/lib/javafx.web.jar" tofile="${artifact.temp.output.SourceCode}/javafx.web.jar"/>
    <copy file="${basedir}/lib/javafx/javafx-sdk-12/lib/javafx.base.jar" tofile="${artifact.temp.output.SourceCode}/javafx.base.jar"/>
    <copy file="${basedir}/lib/javafx/javafx-sdk-12/lib/javafx.fxml.jar" tofile="${artifact.temp.output.SourceCode}/javafx.fxml.jar"/>
    <copy file="${basedir}/lib/javafx/javafx-sdk-12/lib/javafx.media.jar" tofile="${artifact.temp.output.SourceCode}/javafx.media.jar"/>
    <copy file="${basedir}/lib/javafx/javafx-sdk-12/lib/javafx.swing.jar" tofile="${artifact.temp.output.SourceCode}/javafx.swing.jar"/>
    <copy file="${basedir}/lib/javafx/javafx-sdk-12/lib/javafx.controls.jar" tofile="${artifact.temp.output.SourceCode}/javafx.controls.jar"/>
    <copy file="${basedir}/lib/javafx/javafx-sdk-12/lib/javafx.graphics.jar" tofile="${artifact.temp.output.SourceCode}/javafx.graphics.jar"/>
    <copy file="${basedir}/lib/mysql/mysql-connector-java/8.0.15/mysql-connector-java-8.0.15.jar" tofile="${artifact.temp.output.SourceCode}/mysql-connector-java-8.0.15.jar"/>
    <mkdir dir="${artifact.temp.output.SourceCode}/View"/>
    <copy todir="${artifact.temp.output.SourceCode}/View">
      <fileset dir="${basedir}/src/View"/>
    </copy>
    <fx:fileset id="all_but_SourceCode" dir="${artifact.temp.output.SourceCode}" includes="**/*.jar">
      <exclude name="SourceCode.jar"/>
    </fx:fileset>
    <fx:fileset id="all_SourceCode" dir="${artifact.temp.output.SourceCode}" includes="**/*.jar"/>
    <fx:application id="SourceCode_id" name="SourceCode" mainClass="Controller.Main"/>
    <fx:csstobin outdir="${artifact.temp.output.SourceCode}">
      <fileset dir="${artifact.temp.output.SourceCode}" includes="**/*.css"/>
    </fx:csstobin>
    <fx:jar destfile="${artifact.temp.output.SourceCode}/SourceCode.jar" verbose="true">
      <fx:application refid="SourceCode_id"/>
      <fileset dir="${artifact.temp.output.SourceCode}" excludes="**/*.jar"/>
      <fx:resources>
        <fx:fileset refid="all_but_SourceCode"/>
      </fx:resources>
      <manifest>
        <attribute name="Implementation-Title" value="Voyage Database Manager"/>
        <attribute name="Implementation-Version" value=""/>
        <attribute name="Implementation-Vendor" value=""/>
      </manifest>
    </fx:jar>
    <condition property="app.icon.path" value="${basedir}/src/resource/steering_wheel_BfA_icon.ico">
      <os family="windows"/>
    </condition>
    <fx:deploy width="500" height="500" updatemode="background" outdir="${artifact.temp.output.SourceCode}/deploy" outfile="SourceCode" nativeBundles="all" verbose="true">
      <fx:application refid="SourceCode_id"/>
      <fx:info title="Voyage Database Manager">
        <fx:icon href="${app.icon.path}"/>
      </fx:info>
      <fx:resources>
        <fx:fileset refid="all_SourceCode"/>
      </fx:resources>
    </fx:deploy>
    <copy todir="${artifact.output.sourcecode}">
      <fileset dir="${artifact.temp.output.SourceCode}/deploy"/>
    </copy>
    <delete includeemptydirs="true">
      <fileset dir="${artifact.temp.output.SourceCode}"/>
    </delete>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.sourcecode" description="Build all artifacts">
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>